<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>Lista de Usuerios</h1>
    <a href="/create/"> <button>Add User</button></a>

    <table>
      <tbody>
        <% for (const user of users) { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.firstname %></td>
          <td><%= user.lastname %></td>
          <td><%= user.email %></td>
          <td>
            <a href="/edit/<%= user.id %>"> <button>Editar</button></a>
            <a href="/delete/<%= user.id %>"><button>Eliminar</button></a>
          </td>
        </tr>

        <% }; %>
      </tbody>
    </table>
  </body>
</html>
